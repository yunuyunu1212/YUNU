import streamlit as st

st.title("ğŸ’¬ í•™ìƒ ììœ ê²Œì‹œíŒ")
st.caption("ë¹„ì†ì–´ ì‚¬ìš©ì€ ê¸ˆì§€ë©ë‹ˆë‹¤. ë§¤ë„ˆë¥¼ ì§€ì¼œì£¼ì„¸ìš”!")

# ê²Œì‹œê¸€ ì €ì¥ ì €ì¥ì†Œ ì´ˆê¸°í™”
if "posts" not in st.session_state:
    st.session_state.posts = []

# ê¸€ì“°ê¸° í¼
with st.expander("ğŸ“ ê¸€ ì“°ê¸°", expanded=True):
    with st.form("post_form", clear_on_submit=True):
        name = st.text_input("ë‹‰ë„¤ì„", value="ìµëª…")
        content = st.text_area("ë‚´ìš©ì„ ì…ë ¥í•˜ì„¸ìš”")
        submit = st.form_submit_button("ë“±ë¡")
        
        if submit and content:
            st.session_state.posts.append({"name": name, "content": content})
            st.rerun()

# ê²Œì‹œê¸€ ëª©ë¡ ì¶œë ¥
for p in reversed(st.session_state.posts):
    with st.chat_message("user"):
        st.write(f"**{p['name']}**")
        st.write(p['content'])
